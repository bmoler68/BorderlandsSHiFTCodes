<?xml version="1.0" encoding="utf-8"?>
<!--
   Data extraction rules file for Borderlands SHiFT Codes app.
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for details.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include user preferences for cloud backup (filters, theme mode) -->
        <include domain="sharedpref" path="ShiftCodePreferences.xml"/>
        
        <!-- Include Room database for offline SHiFT codes and user redemption tracking -->
        <include domain="database" path="shift_codes_database"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Include user preferences for device transfer (filters, theme mode) -->
        <include domain="sharedpref" path="ShiftCodePreferences.xml"/>
        
        <!-- Include Room database for offline SHiFT codes and user redemption tracking -->
        <include domain="database" path="shift_codes_database"/>
    </device-transfer>
</data-extraction-rules>